@model ServicesDeskUCAB.ViewModel.TicketReenviarViewModel;

<div>
    <h1>Reenviar ticket</h1>
    <hr />
</div>

@if (Context.Request.Query["message"].Count() > 0)
{
    <div class="alert alert-danger text-center alert-dismissible fade show p-3" role="alert">
        <p class="fs-6 m-0">@Context.Request.Query["message"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container" style="margin-top:40px">
    <form method="post" asp-action="GuardarCambios" asp-controller="Ticket">
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Departamento destino:</label>
            <select class="form-select" aria-label="Default select example" required>
                <option selected>Seleccione un departamento destino</option>
                @foreach (var depa in @Model.departamentos)
                {
                    <option value="@depa">@depa.Nombre</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tipo ticket:</label>
            <select id="tipo_ticket" class="form-select disabled" aria-label="Default select example" required>
                <option selected>Seleccione un tipo de ticket</option>
                @foreach (var item in @Model.tipo_tickets)
                {
                    <option value="@item">@item.Nombre</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Prioridad:</label>
            <select asp-for="@Model.ticketHijo.Prioridad" class="form-select" aria-label="Default select example" required>
                <option selected value="@Model.ticketPadre.Prioridad">@Model.ticketPadre.Prioridad.nombre</option>
                @foreach (var item in @Model.prioridades)
                {
                    if (item.nombre != Model.ticketPadre.Prioridad.nombre)
                    {
                        <option value="@item">@item.nombre</option>
                    }

                }
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Titulo:</label>
            <input asp-for="@Model.ticketHijo.titulo" value="@Model.ticketPadre.titulo" type="text" class="form-control" id="recipient-name" maxlength="60" required>
        </div>
        <div class="mb-3">
            <label for="message-text" class="col-form-label">Descripción:</label>
            <textarea asp-for="@Model.ticketHijo.descripcion" value="@Model.ticketPadre.descripcion" class="form-control" id="message-text" maxlength="250" required></textarea>
        </div>
        <div class="text-right" style="margin-top:30px">
            <a class="btn btn-danger" asp-controller="Ticket" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>

