<h1>Detalles</h1>

<div class="row" style="margin-top:30px">
    <div class="col-8">
    </div>
    <div class="col-4 text-right">
        <h6><span class="badge bg-primary rounded-pill"><a>Ticket reenviado</a></span> por Usuario</h6>
        <div class="mb-3">
            <select class="form-select" aria-label="Default select example">
                <option selected>Cambiar estado</option>
                <option value="1">Estado 1</option>
                <option value="2">Estado 2</option>
                <option value="3">Estado 3</option>
            </select>
        </div>
    </div>
    <div class="col-6">
        ID:
    </div>
    <div class="col-6">
        Asunto:
    </div>
    <hr />
    <div class="col-6">
        Estado:
    </div>
    <div class="col-6">
        Departamento:
    </div>
    <hr />
    <div class="col-6">
        Tipo ticket:
    </div>

    <div class="col-6">
        Prioridad:
    </div>
    <hr />
    <div class="col-6">
        Fecha de creación:
    </div>
    <div class="col-6">
        Usuario:
    </div>
    <hr />
    <div class="col-12">
        Descripción:
    </div>
</div>

<div class="col-12 text-center" style="margin-top: 20px">
    <a id="botonAnidado" type="button" class="btn btn-success" onclick="mostrarAnidados()" href="#ticketsAnidados">Ver tickets anidados</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Ticket" asp-action="Index">Aceptar</a>
</div>

<div style="margin-top:30px;">
    <h2 style="margin-bottom: 20px;">Bitacora del ticket</h2>
    <table id="table_id">
        <thead>
            <tr>
                <th>ESTADO</th>
                <th>FECHA INICIO</th>
                <th>FECHA FIN</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Por abrobar</td>
                <td>10/11/2022</td>
                <td>10/12/2022</td>
            </tr>
            <tr>
                <td>Por abrobar</td>
                <td>10/11/2022</td>
                <td>10/12/2022</td>
            </tr>
        </tbody>
    </table>
</div>



<div id="ticketsAnidados" class="container d-none" style="margin-top:30px;">
    <h2 style="margin-bottom: 20px;">Tickets anidados</h2>
    <div>
        <table id="table_id2">
            <thead>
                <tr>
                    <th>TICKET ID</th>
                    <th>TIPO TICKET</th>
                    <th>PRIORIDAD</th>
                    <th>ESTADO</th>
                    <th>FECHA DE CREACIÓN</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>4</td>
                    <td>Solicitud</td>
                    <td>Alta</td>
                    <td>Por aprobar</td>
                    <td>10/11/2022</td>
                    <td>
                        <div class="dropdown" style="float: right">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ticket" asp-action="Details">Ver detalles</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>



