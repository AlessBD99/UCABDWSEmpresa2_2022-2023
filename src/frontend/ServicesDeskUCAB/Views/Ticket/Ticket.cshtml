@model ServicesDeskUCAB.ViewModel.TicketNuevoViewModel;
<div>
    <h1>Nuevo Ticket</h1>
    <hr />
</div>

@if (Context.Request.Query["message"].Count() > 0)
{
    <div class="alert alert-danger text-center alert-dismissible fade show p-3" role="alert">
        <p class="fs-6 m-0">@Context.Request.Query["message"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row" style="margin-top:30px">
    <div class="col-8"></div>
    <div class="col-4 text-right">
        @if (@Model.ticketPadre != null)
        {
            <h6><span class="badge bg-primary rounded-pill"><a asp-controller="Ticket" asp-action="Details" asp-route-ticketId="@Model.ticket.Ticket_Padre.Id">Reenviado Ticket</a></span></h6>
        }
    </div>
</div>

<div class="container" style="margin-top:30px">
    <form method="post" asp-controller="Ticket" asp-action="GuardarTicket">
        @if (@Model.ticketPadre != null)
        {
            <input class="d-none disabled" asp-for="@Model.ticket.Ticket_Padre.Id" value="@Model.ticketPadre.Id" />
        }
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Departamento Destino:</label>
            <select asp-for="@Model.ticket.Departamento_Destino.DepartamentoID" class="form-select" aria-label="Default select example" required>
                <option selected>Seleccione un departamento</option>
                @foreach (var depa in @Model.departamentos)
                {
                    <option value="@depa.DepartamentoID">@depa.Nombre</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tipo ticket:</label>
            <select asp-for="@Model.ticket.Tipo_Ticket.TipoTicketID" class="form-select" aria-label="Default select example" required>
                <option selected>Seleccione un tipo de ticket</option>
                @foreach (var item in @Model.tipo_tickets)
                {
                    <option value="@item.TipoTicketID">@item.Nombre</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Prioridad:</label>
            @if (Model.ticketPadre != null)
            {
                <select asp-for="@Model.ticket.Prioridad.Id" class="form-select" aria-label="Default select example" required>
                    <option selected value="@Model.ticketPadre.Prioridad.Id">@Model.ticketPadre.Prioridad.nombre</option>
                    @foreach (var item in @Model.prioridades)
                    {
                        if (item.nombre != Model.ticketPadre.Prioridad.nombre)
                        {
                            <option value="@item.Id">@item.nombre</option>
                        }
                    }
                </select>
            }
            else
            {
                <select asp-for="@Model.ticket.Prioridad.Id" class="form-select" aria-label="Default select example" required>
                    <option selected>Seleccione una prioridad</option>
                    @foreach (var item in @Model.prioridades)
                    {
                        <option value="@item.Id">@item.nombre</option>
                    }
                </select>
            }

        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Titulo:</label>
            @if (Model.ticketPadre != null)
            {
                <input asp-for="@Model.ticket.titulo" type="text" class="form-control" id="recipient-name" required maxlength="1000" disabled>
            }
            else
            {
                <input asp-for="@Model.ticket.titulo" value="@Model.ticketPadre.titulo" type="text" class="form-control" id="recipient-name" maxlength="1000" required>
            }
        </div>
        <div class="mb-3">
            <label for="message-text" class="col-form-label">Descripción:</label>
            @if (Model.ticketPadre != null)
            {
                <textarea asp-for="@Model.ticket.descripcion" class="form-control" id="message-text" required maxlength="4000" disabled></textarea>
            }
            else
            {
                <textarea asp-for="@Model.ticket.descripcion" value="@Model.ticketPadre.descripcion" class="form-control" id="message-text" maxlength="4000" required></textarea>
            }
        </div>
        <div class="text-right" style="margin-top:30px">
            <a class="btn btn-danger" asp-controller="Ticket" asp-action="Index" asp-route-opcion="Abiertos">Cancelar</a>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>
