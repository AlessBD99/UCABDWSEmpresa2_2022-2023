@model ServicesDeskUCAB.Models.Ticket;
<div>
    <h1>Nuevo Ticket</h1>
    <hr />
</div>

<div class="container" style="margin-top:30px">
    <form method="post" asp-controller="Ticket" asp-action="GuardarCambios">
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Departamento:</label>
            <select asp-for="Departamento_Destino" class="form-select" aria-label="Default select example">
                <option selected>Seleccione un departamento</option>
                @{/*
                    foreach (var depa in departamento)
                    {
                        <option value="@depa">@depa.nombre</option>
                    }
                */}
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Tipo ticket:</label>
            <select asp-for="Tipo_Ticket" class="form-select" aria-label="Default select example">
                <option selected>Seleccione un tipo de ticket</option>
                @{/*
                    foreach (var item in Tipo_Ticket)
                    {
                        <option value="@item">@item.nombre</option>
                    }
                */}
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Prioridad:</label>
            <select asp-for="Prioridad" class="form-select" aria-label="Default select example">
                <option selected>Seleccione una prioridad</option>
                @{/*
                    foreach (var item in Prioridad)
                    {
                        <option value="@item">@item.nombre</option>
                    }
                */}
            </select>
        </div>
        <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Titulo:</label>
            <input asp-for="titulo" type="text" class="form-control" id="recipient-name">
        </div>
        <div class="mb-3">
            <label for="message-text" class="col-form-label">Descripción:</label>
            <textarea asp-for="descripcion" class="form-control" id="message-text"></textarea>
        </div>
        <div class="text-right" style="margin-top:30px">
            <a class="btn btn-danger" asp-controller="Ticket" asp-action="Index" asp-route-opcion="Abiertos">Cancelar</a>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>
           