@model Tuple<List<ServicesDeskUCABWS.BussinesLogic.DTO.DepartamentoDTO.DepartamentoDto>,List<ServicesDeskUCABWS.BussinesLogic.DTO.GrupoDTO.GrupoDto>>

<head>
    <link rel="stylesheet" href="~/css/Sidebar.css" />
</head>

<!-- Button trigger modal -->

<div id="Placeholder"></div>

<div class="container">
    <div class="row">
        <div class="col">
            <div>
                <h1>Departamentos</h1>
            </div>
            <div class="p-1">
                <div class="input-group rounded w-75">
                    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <span class="input-group-text border-0" id="search-addon">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
                <div class="mt-1"></div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Departamento
                </button>
            </div>
            <table class="table">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripcion
                    </th>

                </tr>

                @foreach (var item in Model.Item1)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(i => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.descripcion)
                        </td>

                    </tr>
                }

            </table>
        </div>
        <div class="col">
            <div>
                <h1>Grupos</h1>
            </div>
            <div class="p-1">
                <div class="input-group rounded w-75">
                    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <span class="input-group-text border-0" id="search-addon">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Grupo
                    </button>
            </div>
            <table class="table">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripcion
                    </th>

                </tr>

                @foreach (var item in Model.Item2)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(i => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(i => item.descripcion)
                        </td>

                    </tr>
                }
            </table>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                 <form class="col">
                    <div class="col-6">
                        <label>Nombre</label>
                        <input type="text" placeholder="Nombre del departamento"></input>
                    </div>

                    <div class="col-6">
                        <label>Descripción</label>
                        <input class="w-50" type="text" placeholder="Descripción del departamento"></input>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
