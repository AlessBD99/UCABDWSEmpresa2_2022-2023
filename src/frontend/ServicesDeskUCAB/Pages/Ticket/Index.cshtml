<div class="row">
    <div class="col-8">
        <h1>Tickets</h1>
    </div>
    <div class="col-4">
        <div class="text-right">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        Tickets abiertos
                        <span class="badge bg-primary rounded-pill">14</span>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        Tickets cerrados
                        <span class="badge bg-primary rounded-pill">1000</span>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        Tickets cancelados
                        <span class="badge bg-primary rounded-pill">2</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="text-center" style="margin-top:30px">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarModal">Crear ticket</button>
        </div>
    </div>
</div>


<div class="container" style="margin-top:30px;">
    <div>
        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>TICKET ID</th>
                    <th>TIPO TICKET</th>
                    <th>PRIORIDAD</th>
                    <th>ESTADO</th>
                    <th>FECHA DE CREACIÓN</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Solicitud</td>
                    <td>Alta</td>
                    <td>Por aprobar</td>
                    <td>10/11/2022</td>
                    <td>
                        <div class="dropdown" style="float: right">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ticket" asp-action="Details">Ver detalles</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#reenviarModal">Reenviar</a></li>
                                <li><a class="dropdown-item" href="#">Cambiar estado</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Ticket" asp-action="Merge">Merge</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>



<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Nuevo ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Departamento:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Seleccione un tipo de ticket</option>
                            <option value="1">Departamento 1</option>
                            <option value="2">Departamento 2</option>
                            <option value="3">Departamento 3</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Tipo ticket:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Seleccione un tipo de ticket</option>
                            <option value="1">Tipo ticket 1</option>
                            <option value="2">Tipo ticket 2</option>
                            <option value="3">Tipo ticket 3</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Prioridad:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Seleccione una prioridad</option>
                            <option value="1">Prioridad 1</option>
                            <option value="2">Prioridad 2</option>
                            <option value="3">Prioridad 3</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nombre:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Descripción:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="reenviarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel"> ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Departamento:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Seleccione un tipo de ticket</option>
                            <option value="1">Departamento 1</option>
                            <option value="2">Departamento 2</option>
                            <option value="3">Departamento 3</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Tipo ticket:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Seleccione un tipo de ticket</option>
                            <option value="1">Tipo ticket 1</option>
                            <option value="2">Tipo ticket 2</option>
                            <option value="3">Tipo ticket 3</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Prioridad:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Seleccione una prioridad</option>
                            <option value="1">Prioridad 1</option>
                            <option value="2">Prioridad 2</option>
                            <option value="3">Prioridad 3</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nombre:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Descripción:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </div>
</div>

