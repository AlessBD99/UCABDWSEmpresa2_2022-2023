@model ServiceDeskUCAB.Models.Modelos_de_Usuario.UsuariosRol
@using ServiceDeskUCAB.Models.Modelos_de_Usuario
@{
    ViewData["Title"] = "ViewUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Guid prueba = Model.id;
}
@section scripts {
    <script type="text/javascript">

        var Activado = false;

        $("#Disable").click(function (e) {
            e.preventDefault();
            console.log("Entre")
            //Si la variable 'Activado' es true
            if (Activado) {
                $("select#Prueba").attr('disabled', 'disabled');
                $("input#Prueba").attr('disabled', true);
                $("button#Prueba").css("display", "none")
                $("a#Prueba").css("display", "none")
            }

            else {

                $('select#Prueba').removeAttr("disabled");
                $("input#Prueba").removeAttr('disabled');
                $("button#Prueba").css("display", "block")
                $("a#Prueba").css("display", "block")

            }


            //Cambiamos el valor por el opuesto
            Activado = !Activado;
        });
    </script>
}
    <section style="">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                @using (Html.BeginForm("ModificarUsuario", "Usuario", FormMethod.Post))
                {
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center"><img style="width:25%;" src="https://cdn.discordapp.com/attachments/461277491844349953/1042989230680440932/profile-user-icon-isolated-on-white-background-eps10-free-vector.jpg" /></div>

                        <div class="row justify-content-center">

                            <div>
                                <span>ID: @prueba @Html.TextBoxFor(m => m.id, new { @Value = Model.id,@readonly="readonly",Style="display:none"}) </span>
                                <i id="Disable" type="button" class="fas fa-fw fa-cog"></i>
                            </div>

                            <div class="col-md-3">
                                <label for="inputPassword4" class="form-label">Nombres</label>
                                @Html.TextBoxFor(m => m.primer_nombre,new { @Value= Model.primer_nombre,Style="border-radius: 10px", Class="form-control",placeholder="Primer nombre",type="Text",@disabled = "disabled",id="Prueba" })
                                <span class="text-danger"></span>
                            </div>
                            <div style="padding-top: 8px" class="col-md-3">
                                <label for="inputPassword4" class="form-label"></label>
                                @Html.TextBoxFor(m => m.segundo_nombre,new { @Value= Model.segundo_nombre,Style="border-radius: 10px", Class="form-control",placeholder="Segundo nombre",type="Text",@disabled = "disabled",id="Prueba" })
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label for="inputPassword4" class="form-label">Apellidos</label>
                                @Html.TextBoxFor(m => m.primer_apellido,new { @Value= Model.primer_apellido,Style="border-radius: 10px", Class="form-control",placeholder="Primer nombre",type="Text",@disabled = "disabled",id="Prueba" })
                                <span class="text-danger"></span>
                            </div>
                            <div style="padding-top: 8px" class="col-md-3">
                                <label for="inputPassword4" class="form-label"></label>
                                @Html.TextBoxFor(m => m.segundo_apellido,new { @Value= Model.segundo_apellido,Style="border-radius: 10px", Class="form-control",placeholder="Segundo nombre",type="Text",@disabled = "disabled",id="Prueba" })
                                <span class="text-danger"></span>
                            </div>

                            <div class="col-6">
                                <label for="inputAddress" class="form-label">Genero</label>
                                @Html.TextBoxFor(m => m.gender,new { @Value= Model.gender,Style="border-radius: 10px", Class="form-control",placeholder="Segundo nombre",type="Text",@disabled = "disabled",id="Prueba" })
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label for="inputPassword4" class="form-label">Fecha de Nacimiento</label>
                                @Html.TextBoxFor(m => m.fecha_nacimiento, new {@Value= Model.fecha_nacimiento,Class="form-control " ,Style="border-radius: 10px",Type="date",@disabled = "disabled",id="Prueba"})
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Cedula (ID)</label>
                                @Html.TextBoxFor(m => m.cedula,new { @Value= Model.cedula,Style="border-radius: 10px", Class="form-control",placeholder="Cedula",type="Text",@disabled = "disabled",id="Prueba"})
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Correo Electronico</label>
                                @Html.TextBoxFor(m => m.correo,new { @Value= Model.correo,Style="border-radius: 10px", Class="form-control",placeholder="Email",type="Text",@disabled = "disabled",id="Prueba"})
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label for="inputCity" class="form-label">Rol</label>
                                @Html.DropDownListFor(m => m.Rol,
                            new SelectList(Enum.GetValues(typeof(Rol))),
                            "Seleccione su rol", new {@Value= Model.Rol,Style="border-radius: 10px",Class="form-control",@disabled = "disabled",id="Prueba"})
                                <span class="text-danger"></span>
                            </div>
                            <div style="padding-top: 12px;" class="d-flex justify-content-end">
                                <a type="button" style="background-color: #272727; border-color: #272727; border-radius: 10px;margin-right: 2pc" class="btn btn-primary" href='@Url.Action("Usuarios","Usuario")'>Cancelar</a>
                                <button type="submit" id="Prueba" style="display:none ;background-color: #272727; border-color: #272727; border-radius: 10px" class="btn btn-primary">Registrar</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>