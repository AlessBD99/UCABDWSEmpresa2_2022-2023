@model ServiceDeskUCAB.Models.UsuariosRol

  
@{
    ViewData["Title"] = "GuardarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h1>Registrarar Usuario</h1>
<section style="">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">

                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        
            @using (Html.BeginForm("GuardarUsuario","Usuario",FormMethod.Post)){ 
                        
                        <div class="row">
                            <div class="col-md-3">
                                <label for="inputPassword4" class="form-label">Nombres</label>
                                @Html.TextBoxFor(m => m.primer_nombre,new { Style="border-radius: 10px", Class="form-control",placeholder="Primer nombre",type="Text"})
                                <span class="text-danger" ></span>
                            </div>
                            <div style="padding-top: 8px" class="col-md-3">
                                <label for="inputPassword4" class="form-label"></label>
                                @Html.TextBoxFor(m => m.segundo_nombre,new { Style="border-radius: 10px", Class="form-control",placeholder="Segundo nombre",type="Text"})
                                <span class="text-danger" ></span>
                            </div>
                            <div class="col-md-3">
                                <label for="inputPassword4" class="form-label">Apellidos</label>
                                @Html.TextBoxFor(m => m.primer_apellido,new { Style="border-radius: 10px", Class="form-control",placeholder="Primer apellido",type="Text"})
                                <span class="text-danger" ></span>
                            </div>
                            <div style="padding-top: 8px" class="col-md-3">
                                <label for="inputPassword4" class="form-label"></label>
                                @Html.TextBoxFor(m => m.segundo_apellido,new { Style="border-radius: 10px", Class="form-control",placeholder="Segundo apellido",type="Text"})
                                <span class="text-danger" ></span>
                            </div>
                            <div class="col-6">
                                <label for="inputAddress" class="form-label">Genero</label>
                                       @Html.DropDownListFor(m => m.gender, 
                                            new SelectList(Enum.GetValues(typeof(Gender))), 
                                            "Select Gender", new {Style="border-radius: 10px",Class="form-control"})
                                 <span class="text-danger" ></span>
                            </div>
                            <div class="col-6">
                                    <label for="inputPassword4" class="form-label">Fecha de Nacimiento</label>
                                    @Html.TextBoxFor(x => x.fecha_nacimiento, new {Class="form-control " ,Style="border-radius: 10px",Type="date",})
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                            <div class="col-6">
                                <label for="inputAddress2" class="form-label">Contraseña</label>
                                @Html.TextBoxFor(m => m.password,new { Style="border-radius: 10px", Class="form-control",placeholder="Contraseña",type="Text"})
                                <span class="text-danger" ></span>
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Cedula (ID)</label>
                                @Html.TextBoxFor(m => m.cedula,new { Style="border-radius: 10px", Class="form-control",placeholder="Cedula",type="Text"})
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="inputCity" class="form-label">Correo Electronico</label>
                                @Html.TextBoxFor(m => m.correo,new { Style="border-radius: 10px", Class="form-control",placeholder="Email",type="Text"})
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <label for="inputAddress" class="form-label">Rol</label>
                                    @Html.DropDownListFor(m => m.Rol,
                                new SelectList(Enum.GetValues(typeof(Rol))),
                                "Select Gender", new {Style="border-radius: 10px",Class="form-control"})
                                <span class="text-danger"></span>
                            </div>
                            <div style="padding-top: 12px;margin-right: 8pc;" class="d-flex justify-content-end">
                                <button type="submit" style="background-color: #272727; border-color: #272727; border-radius: 10px;margin-right: 2pc" class="btn btn-primary">Cancelar</button>
                                <button type="submit" style="background-color: #272727; border-color: #272727; border-radius: 10px" class="btn btn-primary">Registrar</button>
                            </div>


                            </div>
                     }  
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


