@model Tuple<List<ServiceDeskUCAB.Models.DepartamentoModel>,ServiceDeskUCAB.Models.DepartamentoModel, ServiceDeskUCAB.Models.GrupoModel>

@{
    ViewData["Title"] = "Gestion Departamento";
    
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<head>
    <title>@ViewData["Title"] - ServicesDeskUCAB</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sb-admin-2.css" />    
</head>


<!-- Ventana emergente para agregar grupo -->

<div class="modal fade" id="popUpAgregar" tabindex="-1" role="dialog" aria-labelledby="popUpEditarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Agregar Grupo</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @using (Html.BeginForm("GuardarGrupo", "DepartamentoYGrupo", FormMethod.Post))
            {
                <div class="modal-body">
@*                    <span>Nombre: </span> @Html.TextBoxFor(m => m.Item3.nombre, new {name = "nombre"})
                    @Html.ValidationMessageFor(m => m.Item3.nombre ,null, new { @class = "text-danger" })*@
                    <label for="nombre">Nombre del Grupo:</label>
                    <input type="text" name="nombre" value="@Model.Item3.nombre" />
                    <br />
                    <br />
@*                    <span>Descripcion: </span> @Html.TextAreaFor(m => m.Item3.descripcion, new {name = "descripcion"})
                    @Html.ValidationMessageFor(m => m.Item3.descripcion ,null, new { @class = "text-danger" })*@
                    <label for="descripcion">Descripción del Grupo:</label>
                    <input type="text" name="descripcion" value="@Model.Item3.descripcion" />
                    <br />
                    <br />
                   
                   @* @Html.TextBoxFor(m => m.Item2.listaGuid,null,new {@style = "display:none;", id = "oculto"})*@
                    <table class="table" id="DeptTable">
                        <tr>
                            <th>

                            </th>
                            <th>
                                Nombre
                            </th>
                                                        
                        </tr>

                        @foreach (var item in Model.Item1)
                        {
                            <tr>
                                <td class="id" style="display:none";>
                                    @Html.DisplayFor(i => item.id)
                                </td>
                                <td>
                                    <input class="check" name="idDepartamentos" id="@item.id" type="checkbox" value="@item.id" />
                                </td>
                                <td>
                                    @Html.DisplayFor(i => item.nombre)
                                </td>                              
                                
                            </tr>
                        }

                    </table>
                 
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" id="btnCrear" class="btn btn-primary">Crear</button>
                </div>
            }

            @*<button type="button"  data-toggle="Prueba" class="btn btn-primary">dfgsdgds</button>*@

        </div>
    </div>
</div>

