@model ServiceDeskUCAB.Models.CargoModel
@{
    ViewData["Title"] = "Gestion Cargo";
}

<head>
    <title>@ViewData["Title"] - ServicesDeskUCAB</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sb-admin-2.css" />
</head>

<!-- Ventana emergente para agregar grupo -->

<div class="modal fade" id="popUpVisualizarTipoCargo" tabindex="-1" role="dialog" aria-labelledby="popUpEditarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Cargos Asociados a @ViewData["nombre"]</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>      
            <div class="modal-body">
                <table class="table">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Descripcion
                        </th>

                    </tr>

                    @foreach (var item in Model.cargos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(i => item.nombre_departamental)
                            </td>
                            <td>
                                @Html.DisplayFor(i => item.descripcion)
                            </td>
                        </tr>
                    }
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="botonCancelar" data-bs-dismiss="modal">Cancelar</button>                    
            </div>
            
        </div>
    </div>
</div>