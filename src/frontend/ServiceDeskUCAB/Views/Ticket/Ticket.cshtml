@model ServiceDeskUCAB.ViewModel.TicketNuevoViewModel;
<div>
    <h1>Nuevo Ticket</h1>
    <hr />
</div>

@if (Context.Request.Query["message"].Count() > 0)
{
    <div class="alert alert-danger text-center alert-dismissible fade show p-3" role="alert">
        <p class="fs-6 m-0">@Context.Request.Query["message"]</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container" style="margin-top:10px">

    <form method="post" asp-controller="Ticket" asp-action="GuardarTicket">
            <input class="d-none" asp-for="@Model.ticket.empleado_id" value="@Model.ticket.empleado_id" required readonly/>
            <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Departamento Destino:</label>
                <select onchange="cargarTipoTicket(this.value)" id="select-departamento" asp-for="@Model.ticket.departamentoDestino_Id" class="form-select" aria-label="Default select example" required>
                    <option selected>Seleccione un departamento</option>
                    @foreach (var depa in @Model.departamentos)
                    {
                        <option value="@depa.Id">@depa.nombre</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Tipo ticket:</label>
                <select id="tipo-ticket"  asp-for="@Model.ticket.tipoTicket_id" class="form-select" aria-label="Default select example" required disabled></select>
            </div>
            <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Prioridad:</label>
                    <select asp-for="@Model.ticket.prioridad_id" class="form-select" aria-label="Default select example" required>
                        <option selected>Seleccione una prioridad</option>
                        @foreach (var item in @Model.prioridades)
                        {
                            <option value="@item.Id">@item.nombre</option>
                        }
                    </select>
            </div>
            <div class="mb-3">
                <label for="recipient-name" class="col-form-label">Titulo:</label>
                    <input asp-for="@Model.ticket.titulo" type="text" class="form-control" id="recipient-name" maxlength="1000" required>
            </div>
            <div class="mb-3">
                <label for="message-text" class="col-form-label">Descripción:</label>
                    <textarea asp-for="@Model.ticket.descripcion" class="form-control" id="message-text" maxlength="4000" required></textarea>
            </div>
            <div class="text-right" style="margin-top:30px">
                <a class="btn btn-danger" asp-controller="Ticket" asp-action="Index" asp-route-opcion="Abiertos">Cancelar</a>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
    </div>
@section Scripts
{
    <script type="text/javascript">
        async function cargarTipoTicket(departamento)
        {
            if (departamento !== '')
            {
                var select = document.getElementById("tipo-ticket");
                console.log(select);
                select.setAttribute("disabled", "");
                select.textContent = "Cargando...";
                select.innerHTML = "";
                var response = await fetch(`https://localhost:44392/Ticket/ObtenerTipoTickets/${departamento}`);
                var tipos = await response.json();
                select.removeAttribute('disabled');
                select.textContent = "Seleccione una opción";
                console.log(tipos.data);
                tipos.data.forEach(e=>{
                    //var option = document.createElement("option");
                    option = document.createElement("OPTION");
                    option.value = e.Id;
                    option.innerHTML = e.nombre;
                    select.appendChild(option);
                });
            }
        }
    </script>
}
