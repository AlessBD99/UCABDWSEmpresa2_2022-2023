                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Descripción:</label>
                        <textarea required class="form-control" id="message-text" asp-for="tipo.descripcion" name="descripcion"></textarea>
                    </div>
                    <div class="container p-2 my-2 border">
                        <div class="mb-3">
                            <h6>Registro Modelo Aprobacion:</h6>
                            <label class="form-label">Tipo Modelo Aprobación:</label>

                            <select required class="form-select form-select-sm" asp-for="tipo.tipo" name="tipo" id="seleccionarModeloAgregar"  required="required" onChange="mostrarPremio(this.value)">
                                <option value="" selected disabled>-- Seleccionar --</option>
                                @foreach(var modelo in Model.listaModelos){
                                    <option value="@modelo.discrimanador">@modelo.nombre</option>
                                }
                            </select>


                            <div class="mb-3" id="Modelo_Jerarquico" style="display: none;">
                                <div class="mb-3">
                                    <label class="form-label">Cargos Asociados:</label>
                                    @foreach (var cargos2 in Model.ListaCargos)
                                    {
                                        <div class="form-check form-switch" >
                                            <input name="cargos2" class="form-check-input inputModelos" value="@cargos2.Id" type="checkbox" onChange="OcultarCampos(this,@cargos2.posicion)" style="position: absolute; left: 60px">
