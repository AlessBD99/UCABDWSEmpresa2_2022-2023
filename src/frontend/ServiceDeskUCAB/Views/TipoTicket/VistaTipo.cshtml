                                            <input name="ordenaprobacion" type="number" class="form-control inputJerarquico" style="width : 60px">
                                            Mínimo Aprobado Nivel:
                                            <input name="minimo_aprobado_nivel" type="number" class="form-control inputJerarquico" style="width : 60px">
                                            Máximo Rechazado Nivel:
                                            <input name="maximo_rechazado_nivel" type="number" class="form-control inputJerarquico" style="width : 60px">
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="mb-3" id="Modelo_Paralelo" style="display: none;">
                                <div class="mb-3">
                                    <label class="form-label">Cargos Asociados:</label>
                                    @foreach (var cargos2 in Model.ListaCargos)
                                    {
                                        <div class="form-check form-switch">
                                            <input name="cargos2" class="form-check-input inputModelos" value="@cargos2.Id" type="checkbox" id="mp-@cargos2.Id" style="position: absolute; left: 60px">
                                            <label class="form-check-label" style="position: absolute; left: 60px">@cargos2.nombre_departamental</label>
