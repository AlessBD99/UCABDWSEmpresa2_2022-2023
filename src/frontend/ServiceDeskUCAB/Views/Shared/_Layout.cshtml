<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - ServicesDeskUCAB</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sb-admin-2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tablas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

    <!-- Iconos -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="">
                <div class="sidebar-brand-icon ">
                    <i class="fab fa-servicestack"></i>
                </div>
                <div class="sidebar-brand-text mx-2">ServiceDesk<sup>UCAB</sup></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
{
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Usuarios">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Usuarios</span>
                </a>
            </li>
}
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
{
            
}
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado" )
{
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Departamento" asp-action="Index">
                    <i class="fas fa-city"></i>
                    <span>Departamentos</span>
                </a>
            </li>
}
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
{
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Grupo" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span>Grupos</span>
                </a>
            </li>
}
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePlantilla" aria-expanded="true" aria-controls="collapsePlantilla">
                    <i class="fas fa-fw fa-edit"></i>
                    <span>Plantillas de notificación</span>
                </a>

                <div id="collapsePlantilla" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Gestion de plantillas:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="PlantillaNotificacion" asp-action="PlantillasNotificacion">Todas las plantillas</a>
                        <a class="collapse-item" asp-area="" asp-controller="PlantillaNotificacion" asp-action="PlantillaNueva">Crear plantilla</a>
                    </div>
                </div>
            </li>
}
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseEstado" aria-expanded="true" aria-controls="collapseEstado">
                    <i class="fas fa-fw fa-bell"></i>
                    <span>Estados de ticket</span>
                </a>
                <div id="collapseEstado" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Gestion de estados:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="EstadoTicket" asp-action="EstadosTicket">Todas los estados</a>
                        <a class="collapse-item" asp-area="" asp-controller="EstadoTicket" asp-action="EstadoNuevo">Crear estado</a>
                    </div>
                </div>
            </li>
            }

            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
{
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Votos" asp-action="VistaTicket">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Gestionar Votos</span>
                </a>
            </li>
}
            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePrioridad"
                   aria-expanded="true" aria-controls="collapsePrioridad">
                    <i class="fas fa-fw fa-bell"></i>
                    <span>Prioridad</span>
                </a>
                <div id="collapsePrioridad" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Gestión de prioridad:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="Prioridad" asp-action="Index">Todas las prioridades</a>
                        <a class="collapse-item" asp-area="" asp-controller="Prioridad" asp-action="Prioridad" asp-route-prioridadID="00000000-0000-0000-0000-000000000000">Crear Prioridad</a>
                    </div>
                </div>
            </li>
            }

            @if (User.Identities.First().Claims.ToList()[2].Value == "Administrador" || User.Identities.First().Claims.ToList()[2].Value == "Empleado")
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTicket"
                   aria-expanded="true" aria-controls="collapseTicket">
                    <i class="fas fa-fw fa-edit"></i>
                    <span>Ticket</span>
                </a>
                <div id="collapseTicket" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Gestión de tickets:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="Ticket" asp-action="Index" asp-route-opcion="Abiertos">Todos los tickets</a>
                        <a class="collapse-item" asp-area="" asp-controller="Ticket" asp-action="Ticket" >Crear Ticket</a>
                    </div>
                </div>
            </li>
            }
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Login" asp-action="LogOut">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Cerrar sesion</span>
                </a>
            </li>


            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>

        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <div class="container" style="margin-top:30px">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2022 - Tablas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>


    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>