@model ServiceDeskUCAB.Models.GrupoModel

@{
    ViewData["Title"] = "Gestion Departamento";
    
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


<head>
    <title>@ViewData["Title"] - ServicesDeskUCAB</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sb-admin-2.css" />    
</head>


<!-- Ventana emergente para agregar grupo -->

<div class="modal fade" id="popUpAgregar" tabindex="-1" role="dialog" aria-labelledby="popUpEditarTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Agregar Grupo</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @using (Html.BeginForm("GuardarGrupo", "DepartamentoYGrupo", FormMethod.Post))
            {
                <div class="modal-body">
                    <label></label>
                    <input type="text" id="@Model.nombre"  name="nombre" value="@Model.nombre" />
                    <br />

                    <input type="text" id="@Model.descripcion" name="descripcion" value="@Model.descripcion" />
                    <br />
  
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" id="btnCrear" class="btn btn-primary">Crear</button>
                </div>
            }

            @*<button type="button"  data-toggle="Prueba" class="btn btn-primary">dfgsdgds</button>*@

        </div>
    </div>
</div>

