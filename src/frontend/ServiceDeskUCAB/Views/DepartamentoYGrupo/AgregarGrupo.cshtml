<!-- Ventana emergente para agregar grupo -->
<div class="modal fade" id="popUpAgregar" tabindex="-1" aria-labelledby="popUpAgregarTitle"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Agregar Grupo</h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("RegistrarGrupo", "DepartamentoYGrupo", FormMethod.Post))
            {
                <div class="modal-body">
                    <span>Nombre: </span> @Html.TextBoxFor(m => m.Item2.nombre)
                    @Html.ValidationMessageFor(m => m.Item2.nombre ,null, new { @class = "text-danger" })
                    <br />
                    <br />
                    <span>Descripcion: </span> @Html.TextAreaFor(m => m.Item2.descripcion)
                    @Html.ValidationMessageFor(m => m.Item2.descripcion ,null, new { @class = "text-danger" })
                    <br />
                    <div class="modal-body row">
                       <div class="row">
                            @Html.DropDownListFor(m => m.Item1.listaGuid, Model.Item1.listaDepartamento,"Seleccionar una opción", new { multiple = true })
                        </div>                        
                     </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            }
        </div>
    </div>
</div>



