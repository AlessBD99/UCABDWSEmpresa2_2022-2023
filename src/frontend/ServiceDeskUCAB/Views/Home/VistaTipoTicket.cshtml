@model ServiceDeskUCAB.Models.ViewModel.TipoNuevoViewModel;



<div class="row">
    <div class="col-8">
        <h1 id="ti">Gestionar Tipo Ticket</h1>
    </div>
    <div class="col-4">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#agregarModal">Agregar Tipo Ticket</button>
    </div>
</div>

<div class="alert alert-success d-none" role="alert">
    "Algun mensaje de confirmación luego de hacer una acción"
</div>

<div style="margin-top:30px;">
    <table id="table_id" class="display">
        <thead>
            <tr>
                
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Tipo Modelo Aprobación</th>
                <th>Departamentos Asociados</th>
                <th>Cargos Asociados</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaTipo)
            {
                <tr>

                    
                    <td>@item.nombre</td>
                    <td>@item.descripcion</td>
                    <td>@item.tipo</td>
                    

                    <td>
                        @foreach (var departamento in item.Departamento)
                        {
                            <p> @departamento.nombre</p>
                        }
                    </td>
                    <td>
                        @foreach (var cargos in item.Flujo_Aprobacion)
                        {

                            <p> @cargos.Tipo_Cargo.nombre</p>

                        }
                    </td>

                    <td>
                        <div class="dropdown" style="float: right">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li>
                        <a asp-action="ModificarTipoTicket" asp-controller="Home" asp-route-tipoTicket="@item" class="btn btn-primary btn-sm">Editar</a></li>
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#eliminarModal">Eliminar</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
           

        </tbody>
    </table>
</div>




<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Nuevo Tipo de Ticket</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nombre:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>

                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Descripción:</label>
                        <textarea class="form-control" id="message-text" asp-for="tipo.descripcion" name="descripcion"></textarea>
                    </div>
                    <div class="container p-2 my-2 border">
                        <div class="mb-3">
                            <h6>Registro Modelo Aprobacion:</h6>
                            <label class="form-label">Tipo Modelo Aprobación:</label>

                            <select class="form-select form-select-sm" asp-for="tipo.tipo" name="tipo" onChange="mostrarPremio(this.value);">
                                <option selected disabled>-- Seleccionar --</option>
                                <option value="Modelo_Paralelo">Modelo Paralelo</option>
                                <option value="Modelo_Jerarquico">Modelo Jerarquico</option>
                                <option value="Modelo_No_Aprobacion">Modelo No Aprobacion</option>
                            </select>


                            <div class="mb-3" id="Modelo_Paralelo" style="display: none;">
                                Mínimo Aprobado:
                                <input type="text" class="form-control" id="recipient-name" style="width : 60px">
                                Máximo Rechazado:
                                <input type="text" class="form-control" id="recipient-name" style="width : 60px">

                            </div>


                            <div class="mb-3" id="Modelo_Jerarquico" style="display: none;">
                               

                                <div class="mb-3">
                                    <label class="form-label">Cargos Asociados:</label>
                                    <div class="form-check form-switch">
                                        <input name="cargos" class="form-check-input" value="" type="checkbox" id="">
                                        <label class="form-check-label">Seguridad</label>
                                        <br />
                                        Orden Aprobación: 
                                        <input type="text" class="form-control" id="recipient-name" style="width : 60px">
                                        Mínimo Aprobado Nivel:
                                        <input type="text" class="form-control" id="recipient-name" style="width : 60px">
                                        Máximo Rechazado Nivel:
                                        <input type="text" class="form-control" id="recipient-name" style="width : 60px">
                                        
                                    </div>
                                </div>

                            </div>
                            <div class="mb-3" id="Modelo_No_Aprobacion" style="display: none;">
                                No requiere Aprobación

                            </div>





                            <script type="text/javascript">
                                function mostrarPremio(id) {

                                    if (id == "Modelo_Paralelo") {
                                        document.getElementById('Modelo_Paralelo').style.display = 'block';
                                        document.getElementById('Modelo_Jerarquico').style.display = 'none';
                                        document.getElementById('Modelo_No_Aprobado').style.display = 'none';
                                    }
                                    if (id == "Modelo_Jerarquico") {
                                        document.getElementById('Modelo_Jerarquico').style.display = 'block';
                                        document.getElementById('Modelo_Paralelo').style.display = 'none';
                                        document.getElementById('Modelo_No_Aprobado').style.display = 'none';
                                    }
                                    if (id == "Modelo_No_Aprobacion") {
                                        document.getElementById('Modelo_No_Aprobacion').style.display = 'block';
                                        document.getElementById('Modelo_Jerarquico').style.display = 'none';
                                        document.getElementById('Modelo_Paralelo').style.display = 'none';
                                    }


                                }


                            </script>
  
                    </div>
                       
                     <div class="mb-3">
                    <label class="form-label">Departamentos Asociados:</label>
                    <div class="form-check form-switch">
                        <input name="departamentos" class="form-check-input" value="" type="checkbox" id="">
                        <label class="form-check-label">Seguridad</label>
                    </div>
                        </div>

                  
                    </div>
                 
                    

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modificarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Modificar Tipo Ticket "nombre"</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form  asp-action="ModificarTipoTicket" asp-controller="Home" method="post">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nombre:</label>
                        <input type="text" class="form-control" id="recipient-name"> <!--asp-for="Nombre"-->
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Descripción:</label>
                        <textarea class="form-control" id="message-text"></textarea> <!--asp-for="Descripcion"-->
                    </div>
                    <div class="container p-2 my-2 border">
                        <div class="mb-2">
                            <h6>Modificar Modelo Aprobacion:</h6>
                            <label class="form-label">Tipo Modelo Aprobación:</label>
                            <select class="form-select form-select-sm">  <!--asp-for="tipo"-->
                                <option selected disabled>-- Seleccionar --</option>
                                <option value="Paralelo">Paralelo</option>
                                <option value="Jerarquico">Jerarquico</option>
                                <option value="Default">Default</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Departamentos Asociados:</label>
                        <br>
                        <select multiple="multiple" style="width=100%;" id="lista">  <!--asp-for="depa"-->
                            <option selected disabled>-- Seleccionar --</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label for="recipient-name" class="col-form-label">Nombre:</label>
                        <input type="number" class="form-control" id="minimo_aprobado"> <!--asp-for="Minimo_aprobado"-->
                         
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Eliminar Tipo Ticket "nombre"</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">¿Seguro que desea eliminar este tipo de ticket "nombre del tipo"?</label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Eliminar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

